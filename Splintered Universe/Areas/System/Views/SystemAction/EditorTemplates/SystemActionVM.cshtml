@model Splintered_Universe.Models.VM.SystemActionVM

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="popup-container">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Action</legend>

<div class="editor-label">
    @Html.LabelFor(model => model.Name)
</div>
<div class="editor-field">
    @Html.TextBoxFor(model => model.Name, new { @class = "k-textbox" })
    @Html.ValidationMessageFor(model => model.Name)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.TextAreaFor(model => model.Description, new { @class = "k-textbox" })
    @Html.ValidationMessageFor(model => model.Description)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.BaseAPCost)
</div>
<div class="editor-field">
    @(Html.Kendo().NumericTextBoxFor(model => model.BaseAPCost)
        .Min(1)
        .Step(1)
        .Decimals(0)
        .Format("{0:N0}")
        .HtmlAttributes(new { @style = "width: 200px;"})
    )
    @Html.ValidationMessageFor(model => model.BaseAPCost)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.MinAPCost)
</div>
<div class="editor-field">
    @(Html.Kendo().NumericTextBoxFor(model => model.MinAPCost)
        .Min(1)
        .Step(1)
        .Decimals(0)
        .Format("{0:N0}")
        .HtmlAttributes(new { @style = "width: 200px;"})
    )
    @Html.ValidationMessageFor(model => model.MinAPCost)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.FatigueCost)
</div>
<div class="editor-field">
    @(Html.Kendo().NumericTextBoxFor(model => model.FatigueCost)
        .Min(1)
        .Step(1)
        .Decimals(0)
        .Format("{0:N0}")
        .HtmlAttributes(new { @style = "width: 200px;"})
    )
    @Html.ValidationMessageFor(model => model.FatigueCost)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.GMNotes)
</div>
<div class="editor-field">
    @Html.TextAreaFor(model => model.GMNotes, new { @class = "k-textbox" })
    @Html.ValidationMessageFor(model => model.GMNotes)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.SystemActionCategorySystemActionCategoryId)
</div>
<div class="editor-field">
    @(Html.Kendo().DropDownListFor(model => model.SystemActionCategorySystemActionCategoryId)
        .OptionLabel("Choose Category...")
        .DataTextField("Name")
        .DataValueField("SystemActionCategoryId")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("SystemActionCategoriesListing", "SystemActionCategory").Data("getSystemId");
            });
        })
        .AutoBind(true)
        .HtmlAttributes(new { style = "width:200px;" } )

    )
    @Html.ValidationMessageFor(model => model.SystemActionCategorySystemActionCategoryId)
</div>

    </fieldset>
}
  </div>
<br/>