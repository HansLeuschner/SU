@model Splintered_Universe.Models.VM.SystemSkillVM
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="popup-container">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Skill</legend>

    <div class="editor-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Name, new { @class = "k-textbox" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Description, new { @class = "k-textbox" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.SystemStatSystemStatId)
    </div>
    <div class="editor-field">
        @(Html.Kendo().DropDownListFor(model => model.SystemStatSystemStatId)
            .OptionLabel("Choose Relevant Stat...")
            .DataTextField("Name")
            .DataValueField("SystemStatId")
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("SystemStatsListing", "SystemStat").Data("getSystemId");
                });
            })
            .AutoBind(true)
            .HtmlAttributes(new { style = "width:200px;" } )

        )
        @Html.ValidationMessageFor(model => model.SystemStatSystemStatId)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.SystemActionSystemActionId)
    </div>
    <div class="editor-field">
        @(Html.Kendo().DropDownListFor(model => model.SystemActionSystemActionId)
            .OptionLabel("Choose Related Action...")
            .DataTextField("Name")
            .DataValueField("SystemActionId")
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("SystemActionsListing", "SystemAction").Data("getSystemId");
                });
            })
            .AutoBind(true)
            .HtmlAttributes(new { style = "width:200px;" } )

        )
        @Html.ValidationMessageFor(model => model.SystemActionSystemActionId)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.GMNotes)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.GMNotes, new { @class = "k-textbox" })
        @Html.ValidationMessageFor(model => model.GMNotes)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.SystemSkillCategorySystemSkillCategoryId)
    </div>
    <div class="editor-field">
        @(Html.Kendo().DropDownListFor(model => model.SystemSkillCategorySystemSkillCategoryId)
            .OptionLabel("Choose Category...")
            .DataTextField("Name")
            .DataValueField("SystemSkillCategoryId")
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("SystemSkillCategoriesListing", "SystemSkillCategory").Data("getSystemId");
                });
            })
            .AutoBind(true)
            .HtmlAttributes(new { style = "width:200px;" } )

        )
        @Html.ValidationMessageFor(model => model.SystemSkillCategorySystemSkillCategoryId)
    </div>

        </fieldset>
    }
</div>
<br/>

